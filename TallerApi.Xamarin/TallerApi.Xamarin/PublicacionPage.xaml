<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerApi.Xamarin.PublicacionPage">
	<ListView x:Name="listPublicacion"
              HasUnevenRows="True"
              ItemSelected="Producto_Selected">
		<ListView.ItemTemplate>
			<DataTemplate>
				<ImageCell Text="{Binding Usuario}"
						   Detail="{Binding Descripcion}"
                           TextColor="Black"
                           DetailColor="DarkGray"
                           />
			</DataTemplate>
		</ListView.ItemTemplate>
	</ListView>
</ContentPage>